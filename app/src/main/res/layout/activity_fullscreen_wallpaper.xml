<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".activity.FullscreenWallpaperActivity">
  <android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
      android:id="@+id/wallpaper_viewpager"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:transitionName="wallpaper"/>

    <eightbitlab.com.blurview.BlurView
      android:id="@+id/full_detail_blur"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:blurOverlayColor="@color/overlayColor"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent">
      <android.support.constraint.ConstraintLayout
        android:id="@+id/wallpaper_bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <br.com.simplepass.loading_button_lib.customViews.CircularProgressImageButton
          android:id="@+id/full_detail_download"
          android:layout_width="48dp"
          android:layout_height="48dp"
          android:layout_marginTop="8dp"
          android:layout_marginBottom="8dp"
          android:layout_marginEnd="8dp"
          android:background="@android:color/transparent"
          app:layout_constraintBottom_toTopOf="@+id/guideline"
          app:layout_constraintEnd_toStartOf="@+id/full_detail_apply"
          app:layout_constraintTop_toTopOf="parent"
          app:spinning_bar_color="#FFF"
          app:spinning_bar_padding="0dp"
          app:spinning_bar_width="2dp"
          app:srcCompat="@drawable/ic_download_white"/>

        <br.com.simplepass.loading_button_lib.customViews.CircularProgressImageButton
          android:id="@+id/full_detail_apply"
          android:layout_width="48dp"
          android:layout_height="48dp"
          android:layout_marginTop="8dp"
          android:layout_marginBottom="8dp"
          android:layout_marginEnd="8dp"
          android:background="@android:color/transparent"
          app:layout_constraintBottom_toTopOf="@+id/guideline"
          app:layout_constraintEnd_toStartOf="@id/full_detail_share"
          app:layout_constraintTop_toTopOf="parent"
          app:spinning_bar_color="#FFF"
          app:spinning_bar_padding="0dp"
          app:spinning_bar_width="4dp"
          app:srcCompat="@drawable/ic_apply_wallpaper_white"/>
        <br.com.simplepass.loading_button_lib.customViews.CircularProgressImageButton
          android:id="@+id/full_detail_share"
          android:layout_width="48dp"
          android:layout_height="48dp"
          android:layout_marginTop="8dp"
          android:layout_marginBottom="8dp"
          android:layout_marginEnd="16dp"
          android:background="@android:color/transparent"
          app:layout_constraintBottom_toTopOf="@+id/guideline"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:spinning_bar_color="#FFF"
          app:spinning_bar_padding="0dp"
          app:spinning_bar_width="2dp"
          app:srcCompat="@drawable/ic_share_white"/>
        <TextView
          android:id="@+id/full_detail_title"
          android:textStyle="bold"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:layout_marginStart="16dp"
          android:layout_marginEnd="8dp"
          android:textColor="@android:color/white"
          android:textSize="18sp"
          android:transitionName="title"
          app:layout_constraintEnd_toStartOf="@+id/full_detail_down_size"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          tools:text="Name"/>
        <TextView
          android:id="@+id/full_detail_category"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:layout_marginBottom="16dp"
          android:layout_marginStart="16dp"
          android:layout_marginEnd="8dp"
          android:textColor="@android:color/white"
          android:textSize="16sp"
          app:layout_constraintBottom_toTopOf="@+id/guideline"
          app:layout_constraintEnd_toStartOf="@+id/full_detail_down_size"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/full_detail_title"
          tools:text="Category"/>
        <TextView
          android:id="@+id/full_detail_down_size"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:layout_marginBottom="8dp"
          android:layout_marginEnd="8dp"
          android:textAlignment="center"
          android:textColor="@android:color/white"
          android:textSize="14sp"
          app:layout_constraintBottom_toTopOf="@+id/guideline"
          app:layout_constraintEnd_toStartOf="@+id/full_detail_download"
          app:layout_constraintTop_toTopOf="parent"
          tools:text="Down Size"/>
        <android.support.constraint.Guideline
          android:id="@+id/guideline"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          app:layout_constraintGuide_end="48dp"/>
      </android.support.constraint.ConstraintLayout>
    </eightbitlab.com.blurview.BlurView>
  </android.support.constraint.ConstraintLayout>


  <eightbitlab.com.blurview.BlurView
    android:id="@+id/full_detail_toolbar_blur"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:blurOverlayColor="@color/overlayColor">
    <android.support.v7.widget.Toolbar
      android:id="@+id/full_toolbar"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      app:theme="@style/ThemeOverlay.AppCompat.ActionBar">
    </android.support.v7.widget.Toolbar>
  </eightbitlab.com.blurview.BlurView>
</FrameLayout>